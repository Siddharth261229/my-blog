<!-- register.ejs -->
<%- include("partials/head") %>
<link rel="stylesheet" href="/public/styles.css" />
<link rel="stylesheet" href="/public/register-styles.css" />
<body class="<%= theme %>-theme">
  <div class="container compose-form">
    <h1>Register</h1>
    <form action="/register" method="POST">
      <input
        style="padding: 8px 14px; border-radius: 10px"
        type="text"
        name="username"
        placeholder="Username"
        required
      />
      <input
        style="padding: 8px 14px; border-radius: 10px"
        type="password"
        name="password"
        placeholder="Password"
        required
      />
      <button
        style="font-family: Dancing Script"
        class="register-btn"
        type="submit"
      >
        Register
      </button>
    </form>
    <a
      style="text-decoration: none; font-size: 1rem"
      href="/auth/google"
      class="google-btn"
    >
      <i class="fab fa-google"></i> Register with Google
    </a>
    <a
      style="text-decoration: none; font-size: 1rem"
      href="/login"
      class="login-btn"
      >Back to Login</a
    >
    <a href="/landing" class="home-btn"> <i class="fas fa-home"></i> Home </a>
  </div>
</body>
